year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

citHeader("To cite iNEXT.beta3D in publications use:")

citEntry(
		 entry = 'manual',
		 title = paste('iNEXT.beta3D:', meta$Title),
		 author = personList(as.person("Anne Chao"),
    	                   as.person("Kai-Hsiang Hu")),
		 year = year,
		 note = note,
		 url = "http://chao.stat.nthu.edu.tw/wordpress/software_download/inext-beta3d/",
		 textVersion = paste("Anne Chao. and K.-H. Hu", year, "iNEXT.beta3D: interpolation and extrapolation with beta diversity for three dimensions of diversity.", note, "URL: http://chao.stat.nthu.edu.tw/wordpress/software_download/inext-beta3d/.")
)

citEntry(
		 entry = 'Article',
		 title = 'Rarefaction and extrapolation with beta diversity under a framework of Hill numbers: the iNEXT.beta3D standardization.',
         author = personList(as.person("Anne Chao"),
                             as.person("Simon Thorn"),
  		                       as.person("Chun-Huo Chiu"),
  		                       as.person("Faye Moyes"),
  		                       as.person("Kai-Hsiang Hu"),
    	                       as.person("Robin L. Chazdon"),
                             as.person("Jessie Wu"),
                             as.person("Luiz Fernando S. Magnago"),
                             as.person("Maria Dornelas"),
                             as.person("David Zeleny"),
                             as.person("Robert K. Colwell"),
                             as.person("Anne E. Magurran")),
		 journal = 'Ecological Monographs',
		 year = '2023',
		 doi = '10.1002/ecm.1588',
  textVersion = paste('Chao, A., Thorn, S., Chiu, C.-H., Moyes, F., Hu, K.-H., Chazdon, R. L., Wu, J., Dornelas, M., Zeleny, D., Colwell, R. K., and Magurran, A. E. (2023). Rarefaction and extrapolation with beta diversity under a framework of Hill numbers: the iNEXT.beta3D standardization. Ecological Monographs e1588.')
)

citEntry(
		 entry = 'Article',
		 title = "Revisiting Alwyn H. Gentry's forest transect data: a statistical sampling-model-based approach.",
         author = personList(as.person("Anne Chao"),
                             as.person("Chun-Huo Chiu"),
  		                       as.person("Kai-Hsiang Hu"),
  		                       as.person("David Zeleny")),
		 journal = 'Japanese Journal of Statistics and Data Science',
		 year = '2023',
		 doi = '10.1007/s42081-023-00214-1',
  textVersion = paste("Chao, A., Chiu, C.-H., Hu, K.-H., and Zeleny, D. (2023). Revisiting Alwyn H. Gentry's forest transect data: a statistical sampling-model-based approach. Japanese Journal of Statistics and Data Science. https://doi.org/10.1007/s42081-023-00214-1")
)

